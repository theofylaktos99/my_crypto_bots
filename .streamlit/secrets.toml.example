# Streamlit Secrets Configuration Example
# Copy this file to secrets.toml and fill in your actual values
# NEVER commit secrets.toml to version control!

# Binance API Configuration
[binance]
api_key = "your_binance_api_key_here"
api_secret = "your_binance_api_secret_here"
sandbox_mode = true  # Set to false for mainnet

# Database Configuration (optional)
[database]
connection_string = "your_database_connection_string_here"

# Application Settings
[app]
environment = "development"  # development, staging, production
debug_mode = true
log_level = "INFO"

# Risk Management
[risk]
max_position_size = 0.05  # 5% of portfolio per trade
stop_loss_percentage = 0.02  # 2% stop loss
take_profit_percentage = 0.04  # 4% take profit

# Notification Settings (optional)
[notifications]
telegram_bot_token = "your_telegram_bot_token"
telegram_chat_id = "your_telegram_chat_id"
email_enabled = false
email_smtp_server = "smtp.gmail.com"
email_smtp_port = 587
email_address = "your_email@example.com"
email_password = "your_email_password"

# Advanced Trading Settings
[trading]
default_symbol = "BTC/USDT"
default_timeframe = "1h"
max_concurrent_bots = 5
rate_limit_enabled = true

# Technical Indicator Parameters
[indicators]
rsi_period = 14
ema_period = 200
atr_period = 14
oversold_threshold = 30
overbought_threshold = 70
